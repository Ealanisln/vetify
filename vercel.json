{
  "buildCommand": "pnpm run build",
  "framework": "nextjs",
  "installCommand": "pnpm install --no-cache",
  "regions": ["iad1"],
  "functions": {
    "app/**/*.{js,ts,tsx}": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=8192"
    }
  }
}
